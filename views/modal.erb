<!-- HILLARY MODAL -->

<div class="modal fade" id="hillaryModal" tabindex="-1" role="dialog" aria-labelledby="hillaryModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="hillaryModalLabel">Nickname Hillary</h4>
      </div>
      <div class="modal-body">

<!-- HILLARY NAME FORM -->

        <form action="/hillary" method="POST">
        <input type="text" class="form-control" placeholder="Add Yours" name="hillarynames[hillary_name]">
        </form>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Updated On</th>
              <th>Nickname</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= @hdate1 %>
              </td>

              <td>
                <input value="<%= @hname1 %>" readonly>
              </td>

              <td>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </td>
            </tr>
            <tr>
              <td>
                <%= @hdate2 %>
              </td>

              <td>
                <input value="<%= @hname2 %>" readonly>
              </td>

              <td>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </td>
            </tr>
            <tr>
              <td>
                <%= @hdate3 %>
              </td>

              <td>
                <input value="<%= @hname3 %>" readonly>
              </td>

              <td>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true" id="hpencil3"></span>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

