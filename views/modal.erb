
<!-- HILLARY MODAL -->

<div class="modal fade" id="hillaryModal" tabindex="-1" role="dialog" aria-labelledby="hillaryModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="hillaryModalLabel">Nickname Hillary</h4>
      </div>
      <div class="modal-body">

<!-- HILLARY NAME FORM -->

        <input type="text" class="form-control" placeholder="Add Yours" id="newhname" value="">

        <table class="table table-hover" id="hillary-table">
          <thead>
            <tr>
              <th>Last Updated</th>
              <th>Nickname</th>
              <th>Actions</th>
            </tr>
          </thead>

          <form action="/hillarynames" method="POST">
          <tbody>
            <% if @hnames != nil %>
              <% @hnames.each do |hname| %>
              <tr>
                <td>
                  <%= hname.updated_at.strftime("%m.%d.%Y") %>
                </td>

                <td>
                  <input value="<%= hname.name %>" readonly onfocus="this.value = this.value;" class="highlight">
                </td>

                <td>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <form action="/hillary_d/<%= hname.id %>" method="POST" id="icon-input-btn">
                      <input type="hidden" name="_method" value="delete">
                      <input class="delete" type="submit" value="❌" style="background-color: white;">
                    </form>
                </td>
              </tr>
              <% end %>
            <% end %>
          </tbody>
        </form>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>




